<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@color/colorAccent"
    android:elevation="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/order_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/product_image" />

    <TextView
        android:id="@+id/order_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Pixel 2"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="Rs 00.0"
        android:textColor="@color/txtBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_product_title"/>

    <TextView
        android:id="@+id/order_qty1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:text="Qty:"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_price"
        app:layout_constraintStart_toEndOf="@+id/order_price" />
    <TextView
        android:id="@+id/order_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:text="1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_price"
        app:layout_constraintStart_toEndOf="@+id/order_qty1" />



    <View
        android:id="@+id/order_rating_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_product_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_rating_divider">

        <Button
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:text="Check Status"
            android:textColor="@color/txtBlack"
            android:background="@color/RecyclerViewsBackground"
            android:id="@+id/order_status"/>


        <Button
            android:text="Cancle item"
            android:id="@+id/order_cancle"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:background="@color/btnRed"
            android:drawableStart="@drawable/delete_bin"
            android:textColor="@color/colorAccent"
            android:layout_width="180dp"
            android:layout_height="40dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
